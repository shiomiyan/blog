---
import { TAGS } from "@lib/tags";

type Props = {
	tag: keyof typeof TAGS;
	count?: number;
};

const { tag, count } = Astro.props;
const displayName = TAGS[tag];
---

<a
	href={`/tags/${tag}`}
	class="rounded-lg border border-black/15 px-2 py-0.5 font-mono text-xs hover:bg-gray-200"
	aria-label={`tag: ${displayName}`}
>
	{displayName}{count !== undefined && ` (${count})`}
</a>
