---
import { getTagDisplayName } from "@lib/tags";

type Props = {
	tags: string[];
};

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
	{
		tags.map((tag) => (
			<a
				href={`/tags/${tag}`}
				class="rounded-lg border border-black/15 px-2 py-0.5 text-xs hover:bg-gray-200"
				aria-label={`tag: ${tag}`}
			>
				{getTagDisplayName(tag)}
			</a>
		))
	}
</div>
