{
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "spellcheck-tech-word": true,
    "preset-jtf-style": {
      "3.1.1.全角文字と半角文字の間": false,
      "4.3.1.丸かっこ（）": false,
      "4.2.7.コロン(：)": false
    }
  },
  "filters": {
    "allowlist": {
      "allow": [
          "/\{\{\< [\\s\\S]*? \>\}\}/m",
        ]
    }
  }
}
